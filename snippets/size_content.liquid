<script>
  //Usage:
// add js-menu__open class to menu icon
// add data-menu attr with the id of the menu to be expanded
// add id to the menu element and the js-menu class
// wrap menu in pp_size_context class
// add js-menu--right or js-menu--left to set the slide direction 

window.addEventListener('pplrAppInitiated' , function(e) {

  $(".pplr-choose-product .pplrlabel").append("<span data-menu='#pp_sizechart' class='pp_sizechart product_info'>Product Info</span>");
  
  $('.pplr-choose-product .product_info').on('click', function(){
    var size_container = $(this).attr('data-menu');

    $('body').addClass('size_content_open');
    $(size_container).toggleClass('js-menu__expanded');
    $(size_container).parent().toggleClass('js-menu__expanded');

    /*AP added 27/09/22 */
  
  });
$('.pp_sizechart_content-wrapper .pp_sizechart_layout').on('click', function(){
  $('.pp_sizechart_layout').removeClass('active');
  $(this).addClass('active');

  var selected_size = $(this).attr('data-value');

  console.log(selected_size +"<<size");

  $('.pp_sizechart_background').addClass('hidden');  
  $('.pp_sizechart_background_content').find("[data-imgid='"+ selected_size +"']").removeClass('hidden');
  

   $('.pp_sizechart_txt').addClass('hidden');  
   $('.pp_sizechart_image_content').find("[data-content='"+ selected_size +"']").removeClass('hidden');

  
  
});
  


});
$('.pp_size_context, .js-menu__close').on('click', function(event){
    if ( $(event.target).hasClass('pp_size_context') || $(event.target).hasClass('js-menu__close') ) {
      $('.js-menu__expanded').removeClass('js-menu__expanded');
      $('body').removeClass('size_content_open');
    }
  });
$('.pp_sizechart_layouts .swatch-element').on('click', function() {
  $('.pp_sizechart_layouts .swatch-element.active').removeClass('active');
  $(this).addClass('active');
});

$('.pp_sizechart_sizes .swatch-element').on('click', function() {
  $('.pp_sizechart_sizes .swatch-element.active').removeClass('active');
  $(this).addClass('active');
});

$('.pp_sizechart_frame .swatch-element').on('click', function() {
  $('.pp_sizechart_frame .swatch-element.active').removeClass('active');
  $(this).addClass('active');
});
  
</script>